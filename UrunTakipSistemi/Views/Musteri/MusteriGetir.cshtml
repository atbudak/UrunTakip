@model UrunTakipSistemi.Models.Entity.TBLMUSTERI
@{
    ViewBag.Title = "MusteriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Musteri Güncelleme</h2>


@using (@Html.BeginForm("MusteriGuncelle", "Musteri", FormMethod.Post))
{

    @Html.HiddenFor(x => x.ID)
    <br />
    @Html.Label("Müşteri Adı")
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AD, "", new { @style = "color:black;opacity:.7" })
    <br />
    @Html.Label("Müşteri Soyadı")
    @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.SOYAD, "", new { @style = "color:black;opacity:.7" })
    <br />
    @Html.Label("Şehir")
    @Html.TextBoxFor(x => x.SEHIR, new { @class = "form-control" })
    <br />
    @Html.Label("Bakiye")
    @Html.TextBoxFor(x => x.BAKIYE, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
}