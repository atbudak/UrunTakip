
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <title>Ürün Takip Sistemi | Giriş Yap</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/weblogin/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->

</head>


<body>
    <h1>Giriş Form Paneli</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yap</h2>
        @using (Html.BeginForm("Giris", "GirisYap", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Kullanıcı Adı:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" required="required" name="KULLANICI" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Şifre" required="required" name="SIFRE" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Şifremi Unuttum ?</a>
                <p><input type="checkbox">Beni Hatırla</p>
            </div>
            <button type="submit">Giriş Yap</button>
        }
        <div class="col-lg-3 container">
            @if (ViewBag.hata != null)
            {
                <p class="text-info" style="text-align:center;color:#fc3955">@ViewBag.hata</p>
            }
        </div>
        <p class=" w3l-register-p">Hesabın yok mu?<a href="#" class="register"> Hemen Kaydol</a></p>
    </div>
   
</body>

</html>