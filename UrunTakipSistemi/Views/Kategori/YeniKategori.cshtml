@model UrunTakipSistemi.Models.Entity.TBLKATEGORI
@{
    ViewBag.Title = "YeniKategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Kategori Ekleme</h2>
<br />
<br />
<form method="post">
    <label>Kategori Adını giriniz...</label>
    <input type="text" name="AD" class="form-control form-control" placeholder="Kategori adı giriniz.." /><br />
    @Html.ValidationMessageFor(x => x.AD, "", new { @style = "color:black;opacity:.7" })
    <br />
    <button class="btn btn-success" style="margin:10px 0">Ekle</button>
</form>
