@using UrunTakipSistemi.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>AD</td>
        <td>SİL</td>
        <td>GÜNCELLE</td>
    </tr>
    @foreach(var ktg in Model)
    {
        <tr>
            <td>@ktg.ID</td>
            <td>@ktg.AD</td>
            <td><a href="/Kategori/KategoriSil/@ktg.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@ktg.ID" class="btn btn-info">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Kategori/YeniKategori" class="btn btn-success">Yeni Kategori</a>